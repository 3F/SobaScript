<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.14.0</Version>
    <BuildInfoVSSBE></BuildInfoVSSBE>
    <!-- <AssemblyVersion>0.0.1.0</AssemblyVersion> -->
    <!-- <FileVersion>0.0.1.0</FileVersion> -->
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net40</TargetFrameworks>
    <RootNamespace>net.r_eg.SobaScript</RootNamespace>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>key.snk</AssemblyOriginatorKeyFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>Copyright (c) 2014-2019  Denis Kuzmin &lt; x-3F@outlook.com &gt; GitHub/3F</Copyright>
    <Title>[ #SobaScript ] Extensible Modular Scripting Programming Language</Title>
    <Description>Extensible Modular Scripting Programming Language -- #SobaScript.
    https://github.com/3F/SobaScript

    #["
        #SobaScript in action
    "]
    #[var v = 1.2.3]
    #[$(log = "(TMP)/v.txt")]

    #[($(Configuration) ~= Deb || true)
    {
        #[try
        { 
            #[File write("#[var log]"): Example #[var v] Generated by a vsSBE]
            #[IO scall("notepad", "@(log)")]
        }
        catch(err, msg)
        {
            (err) - Type of Exception
            (msg) - Error Message
        }]
    }]

    =======================================
    gnt /p:ngpackages="SobaScript/$(Version)"
    ================== https://github.com/3F/GetNuTool

    Build info:

    $(BuildInfoVSSBE)
    </Description>
    <PackageOwners>reg</PackageOwners>
    <PackageProjectUrl>https://github.com/3F/SobaScript</PackageProjectUrl>
    <RepositoryUrl>https://github.com/3F/SobaScript</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ProgrammingLanguage SobaScript ScriptLanguage scripts scripting evaluator parser Varhead vsSBE SBE-Scripts E-MSBuild EvMSBuild vsSolutionBuildEvent vsCommandEvent</PackageTags>
    <PackageReleaseNotes>https://github.com/3F/SobaScript/blob/master/changelog.txt</PackageReleaseNotes>
    <Authors>github.com/3F/SobaScript</Authors>
    <DocumentationFile>$(OutputPath)\$(AssemblyName).xml</DocumentationFile>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <Configurations>DBG_SDK10;DBG_SDK15;REL_SDK10;REL_SDK15;DCI_SDK10;DCI_SDK15;RCI_SDK10;RCI_SDK15</Configurations>
    <NoWarn>1701;1702;CS1591</NoWarn>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' Or $(Configuration.Contains('DBG_')) Or $(Configuration.Contains('DCI_')) ">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' Or $(Configuration.Contains('REL_')) Or $(Configuration.Contains('RCI_')) ">
    <DefineConstants />
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\Readme.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\changelog.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\.version">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\tools\hMSBuild.bat">
      <Visible>false</Visible>
      <Pack>True</Pack>
      <PackagePath>tools\</PackagePath>
    </None>
    <None Include="..\tools\gnt.bat">
      <Visible>false</Visible>
      <Pack>True</Pack>
      <PackagePath>tools\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\E-MSBuild\E-MSBuild\E-MSBuild.csproj" />
  </ItemGroup>

</Project>
